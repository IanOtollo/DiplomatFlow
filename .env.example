# DiplomatFlow Environment Variables Template
# Copy this file and fill in your values

# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False
DJANGO_SETTINGS_MODULE=mofa_task_tracker.settings

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=.railway.app,.herokuapp.com,localhost,127.0.0.1

# Database (automatically provided by Railway/Heroku)
# DATABASE_URL=postgresql://user:password@host:port/database

# Email Settings (optional - for password reset emails)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Security (leave these as-is for production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Generate SECRET_KEY using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
